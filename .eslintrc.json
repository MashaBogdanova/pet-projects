{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-debugger": "error",
        "quotes": ["error", "single"],
        "object-curly-spacing": ["error", "always"]
    },
    "ignorePatterns": ["css-selectors/dist/*.js", "webpack.config.js"]
}
